<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.DoctorMapper">

    <resultMap id="DoctorMap" type="com.example.demo.entity.Doctor">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="department" property="department"/>
        <result column="title" property="title"/>
        <result column="phone" property="phone"/>
        <result column="description" property="description"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,department,title,phone,description
    </sql>

    <insert id="insert" parameterType="com.example.demo.entity.Doctor" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO doctor(name,department,title,phone,description)
        VALUES (#{name},#{department},#{title},#{phone},#{description})
    </insert>

    <update id="update" parameterType="com.example.demo.entity.Doctor">
        UPDATE doctor
        SET name=#{name},
            department=#{department},
            title=#{title},
            phone=#{phone},
            description=#{description}
        WHERE id=#{id}
    </update>

    <delete id="deleteById">
        DELETE FROM doctor WHERE id=#{id}
    </delete>

    <select id="selectById" resultMap="DoctorMap">
        SELECT <include refid="Base_Column_List"/> FROM doctor WHERE id=#{id}
    </select>

    <select id="selectList" resultMap="DoctorMap">
        SELECT <include refid="Base_Column_List"/> FROM doctor
        <where>
            <if test="name != null">
                name LIKE #{name}
            </if>
            <if test="department != null">
                AND department LIKE #{department}
            </if>
        </where>
        ORDER BY id DESC
    </select>
</mapper>

